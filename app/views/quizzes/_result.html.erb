<% description @quiz.title %>
<div class="bg-warning p-3 my-3 rounded" id="ogp-image">
    <div class="font-weight-bold h3">診断結果</div>
    <div class="bg-white border border-dark">
        <div class="my-5 h2">
            <%= @quiz_result_title %>
        </div>
        <% if @quiz_result_img.present? %>
            <div class="my-5">
                <div class="embed-responsive mx-auto">
                    <%= image_tag "#{@quiz_result_img}" %>
                </div>
                <p class="text-muted">引用:<%= @quiz_result_img %></p>
            </div>
        <% end %>
        <div class="my-5">
            <%= @quiz_result_content %>
        </div>
    </div>
</div>

<div class="bg-warning p-3 rounded">
    <div class="bg-white border border-dark py-3">
    <%= link_to @twitter_url, :onclick=>"window.open(this.href,'hoge', 'height=400, width=600');return false;", class:"twitter-share-button" do %>
        <div class="btn btn-primary btn-lg" id="twitter_btn">
            <i class="fa fa-twitter-square" aria-hidden="true"></i>　診断結果をツイート！
        </div>
    <% end %>
    </div>
</div>

<div class="bg-warning p-3 rounded my-3">
    <div class="bg-white border border-dark py-3">
        <span class="font-weight-bold d-block">こめんとメーカーが気に入ったら、↓こちら↓も押してくれると嬉しいです。</span>
        <%= link_to @follow_url, :onclick=>"window.open(this.href,'hoge', 'height=400, width=600');return false;", class:"twitter-share-button" do %>
        <div class="btn btn-primary">
            <i class="fa fa-twitter-square d-block" aria-hidden="true"></i>　！こめんとメーカーをフォロー！
        </div>
        <% end %>
    </div>
</div>

<div class="bg-warning rounded p-3 mb-3">
    <div class="bg-white border border-dark py-3">
        <span class="font-weight-bold">
        <%= link_to "もう一度診断する", quiz, class:"font-weight-bold" , data: {"turbolinks" => false}  %>
        </span>
    </div>
</div>

