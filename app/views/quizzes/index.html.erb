<p id="notice"><%= notice %></p>

<h1>Quizzes</h1>

    <% @quizzes.each do |quiz| %>
        <div class="bg-warning p-1 mb-3 rounded">
            <ul class="list-group">
                <%= link_to quiz, class:"font-weight-bold" do %>
                    <% if quiz.title_img.present? %>
                        <% if quiz.title_img_option == '1' %>
                        <%    img_file = "<img src=" + "#{quiz.title_img}" + ' alt="タイトル画像">' %>
                        <%    quiz.title_img = img_file %>
                        <% elsif quiz.title_img_option == '2' %>
                        <%    movie_file = "<iframe class=" + "embed-responsive-item" +  %>
                        <%    " src=" + "https://www.youtube.com/embed/" +  "#{quiz.title_img[32..42]}" + " frameborder=" + "0" + %>
                        <%    " allow=" + "accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" + " allowfullscreen></iframe>" %>
                        <%    quiz.title_img = movie_file %>
                        <% end %>
                        <li class="list-group-item">
                            <%= simple_format(quiz.title_img, {}, wrapper_tag: "div", sanitize: false, class:"w-50 h-50") %>
                        </li>
                    <% end %>
                    <li class="list-group-item">
                    <%= quiz.title %>                                      
                    </li>
                    <li class="list-group-item">
                        <span class="text-muted"><%= quiz.description %></span>
                    </li>
                <% end %>
            </ul>
        </div>
    <% end %>

<%= link_to 'New Quiz', new_quiz_path %>
